  </nav>
    <br>
    <br>
    <section class="h-100 h-custom" style="background-color: #eee;">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col">
            <div class="card">
              <div class="card-body p-4">
    
                <div class="row">
    
                  <div class="col-lg-7">
                    <h5 class="mb-3"><a href="/" class="text-body"><i
                          class="fas fa-long-arrow-alt-left me-2"></i>Continue shopping</a></h5>
                    <hr>
    
                    <div class="d-flex justify-content-between align-items-center mb-4">
                      <div>
                        <p class="mb-1">Dettagli ordine:</p>
                      </div>
                    </div>
    
                    <%
                    if(r.length!=0){
                    var tot = 0;
                    for(x = 0; x < r[0].length; x++){
                      tot += r[0][x][0].price * r[1][x].quantity%>
                      <div class="card mb-3">
                        <div class="card-body">
                          <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center">
                              <div>
                                <img
                                  src="<%=r[0][x][0].photo%>"
                                  class="img-fluid rounded-3" alt="Shopping item" style="width: 65px;">
                              </div>
                              <div class="ms-3">
                                <h5><%=r[0][x][0].name%></h5>
                              </div>
                            </div>
                            <div class="d-flex flex-row align-items-center">
                              <div style="width: 50px;">
                                <h5 class="fw-normal mb-0"><%=r[1][x].quantity%>    x </h5>
                              </div>
                              <div style="width: 80px;">
                                <h5 class="mb-0"><%=r[1][x].price%>€</h5>
                              </div>
                              <a href="/productPage/<%=r[0][x][0].name%>" style="color: #cecece;"><i class="fa fa-arrow-circle-right"></i></a>
                            </div>
                          </div>
                        </div>
                      </div><%
                    }}
                    
                    else{
                      %>
                      <div class="card mb-3">
                        <div class="card-body">
                          <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center">
                              <div class="ms-3">
                                <h5>Qualcosa è andato storto</h5>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div><%}%>
                  </div>
                  <h3>Totale: <%=tot.toFixed(2)%>€ </h3>
                  <div class="col-lg-5">
    
                    
    
                  </div>
    
                </div>
    
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>







