    <!--PAGE CONTENT-->
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-6">
                        <br>
                        <div class="white-box text-center">
                            <img class="img-responsive"src="<%=product[0].photo_%>" style="width: 20vw; height: 20vw;">
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-6">
                        <h3 class="box-title mt-5"><%=product[0].name%></h3>
                        <p><%=product[0].longDesc%></p>
                        <h2 class="mt-5"><%=product[0].price%>€</h2>
                        <p>disponibili: <%=product[0].quantity%></p>
                        <button class="btn btn-dark btn-rounded mr-1" data-bs-toggle="modal" data-bs-target="#addToCart" data-toggle="tooltip" title="" data-original-title="Add to cart">
                            <p><i class="fa fa-shopping-cart"></i> Aggiungi al carrello</p>
                        </button>
                        <h3 class="box-title mt-5">Dettagli prodotto:</h3>
                        <ul>
                            <% if (product[0].description){desc = product[0].description.split(',')
                               %>
                            <li><p><i class="fa fa-check"></i> <%=desc[0]%></p></li>
                            <li><p><i class="fa fa-check"></i> <%=desc[1]%></p></li>
                            <li><p><i class="fa fa-check"></i> <%=desc[2]%></p></li>
                            <%}%>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal fade" id="addToCart" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Quantità</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" >
                <form action="/auth/addToCart/<%=product[0].name%>"name="form1" method="POST">
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Inserisci quantita</label>
                        <input type="text" class="form-control" id="message-text" name="text" min="1" max="<%=product[0].quantity%>"></input>
                    </div>
            
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" onclick()="/auth/addToCart/<%=product[0].name%>">Add to cart</button>
                </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="BN" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Quantità</h5>
